<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_item_recyclerview_content_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="4dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tv_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21"
        android:layout_marginTop="-8dp"
        android:layout_marginLeft="16dp"
        android:textSize="28sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tv_item_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="周三"
        android:layout_marginTop="-8dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv_item_date"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"/>

    <!--<com.campuslife.event.tools.RoundAngleImageView-->
        <!--android:id="@+id/roundAngleImageView2"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="104dp"-->
        <!--app:roundHeight="2dp"-->
        <!--app:roundWidth="2dp"-->
        <!--android:src="@android:color/holo_green_light"-->
        <!--android:layout_marginRight="16dp"-->
        <!--android:layout_marginLeft="72dp"/>-->

    <com.campuslife.event.tools.RoundAngleImageView
        android:id="@+id/roundAngleImageView"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        app:roundWidth="2dp"
        app:roundHeight="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/usereventpic"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="72dp"/>

    <com.campuslife.event.tools.RoundAngleImageView
        android:layout_width="match_parent"
        android:layout_height="102dp"
        app:roundHeight="2dp"
        app:roundWidth="2dp"
        android:scaleType="centerCrop"
        android:src="#33000000"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="72dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignBottom="@+id/roundAngleImageView"
        android:layout_alignStart="@+id/roundAngleImageView"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="东国大学校庆"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_above="@+id/tv_item_time"
            android:layout_alignStart="@+id/tv_item_add"/>

        <TextView
            android:id="@+id/tv_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="15:00-21:00"
            android:layout_alignStart="@+id/roundAngleImageView"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/tv_item_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="首尔特别市中区东国大学"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</RelativeLayout>